{
  "name": "translation-preview",
  "displayName": "Translation Preview",
  "description": "Preview translations for .pot and .po files",
  "repository": "https://github.com/yoshonabee/translation-preview",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Translation Preview",
      "properties": {
        "translationPreview.languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["en"],
          "description": "List of language codes for preview translations"
        },
        "translationPreview.potPath": {
          "type": "string",
          "default": "./locales/messages.pot",
          "description": "Path to the .pot file containing translation keys"
        },
        "translationPreview.poPath": {
          "type": "string",
          "default": "./locales/{lang}/LC_MESSAGES/messages.po",
          "description": "Path to the .po files containing translations. Use {lang} as a placeholder for the language code."
        },
        "translationPreview.translateFunctions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["_", "t", "i18n"],
          "description": "List of translation function names to recognize"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "typescript": "^4.2.4"
  }
}